/**index.wxss**/
/* 艾迪宝陪练机器人 */
.title{
  height:60rpx;
  line-height:60rpx;
  padding-left:3%;
  background-color: #fff;
  font-weight: bold;
}
/* 广告轮播 */
.banner {
  height: 300rpx;
}
.banner navigator {
  font-size: 0;
  position: relative;
  height: 100%;
}
.banner .slide-image {
  width: 100%;
  height: 100%;
}
.banner .slide-title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 11pt;
  display: none;
}
/* 余额、扫码、充值、优惠券 */
.section-width{
  width:100%;
  background-color: #fff
}
.section{
  width:50%;
  text-align: center;
}
.section-border-bottom{
   border-bottom:1px solid rgb(230, 226, 226);
}
.section-border-left{
  border-left:1px solid rgb(230, 226, 226);
}
.section-img{
  width:13%;
  height:50rpx;
  margin-top:15rpx;
}
.section-tag{
  font-size:9pt;
  margin-bottom:6rpx;
}
.section-tag-color{
