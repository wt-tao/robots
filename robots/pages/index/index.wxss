/* 弹出框 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width:440rpx;
  overflow: hidden;
  position: fixed;
  top: 48%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 145rpx;
  border-radius: 30rpx;
  
}

.modal-title {
  padding:15rpx 0 0 15rpx;
  font-size:9pt;
  text-align: left;
}

.modal-content {
  padding:25rpx 15rpx 15rpx 15rpx;
  font-size:12pt;
  font-weight:bold;
  letter-spacing:3rpx;
}
.modal-content-line{
  justify-content:space-between;
  margin-bottom:10rpx;
  /* text-align: center; */
}
.modal-content-title{
  width:90%;
  /* text-align: center; */
}
.modal-footer {
  display: flex;
  align-items: center;
  height: 92rpx;
  line-height: 92rpx;
  padding:15rpx 0 15rpx 15rpx;
  border-top:1px solid #f0f0f0;
  font-size:12pt;
  font-weight:bold;
  letter-spacing:3rpx;
}
.btn-width{
