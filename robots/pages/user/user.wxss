/* pages/user/user.wxss */
/* 艾迪宝陪练机器人 */
.title{
  height:60rpx;
  line-height:60rpx;
  padding-left:3%;
  background-color: #fff;
  font-weight: bold;
}

/* 艾迪宝 */
.user{
  width:100%;
  height:420rpx;
  text-align: center;
  background: #18bc9a;
}
.user-pic{
  width:25%;
  height:220rpx;
  padding-top:40rpx;
}
.user-identify{
      color:#fff;
      font-size:12pt;
}
.user-detail{
  width:94%;
  margin-left:3%;
 margin-top:100rpx;
 justify-content: space-between;

}
.user-detail>view{
  width:25%;
  align-items:center;
}
.section-img{
  width:20%;
  height:35rpx;
  padding:5rpx 5rpx;
  border-radius:50%;
}
.user-coupon{
  font-size:10pt;
  height:35rpx;
  line-height: 35rpx;
  color:#fff;
  padding-left:10rpx;
  padding-right:10rpx;
}
.coupon-num{
  height:45rpx;
  line-height:45rpx;
  color:#fff;
  font-size:12pt;
  font-weight:900;
}

/* 下方选项 */
.option-list {
  margin-bottom: 20rpx;
}
.option-list>view{
  border-bottom: 1rpx solid #eee;
}

.option-item {
  background: #fff;
  padding: 0 24rpx;
  display: block;
  position: relative;
}

.option-item .option-content {
  /* border-bottom: 1rpx solid #eee; */
  height: 80rpx;
}

.option-item .option-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 24rpx;
}

.option-item .option-jisntou {
  width: 12rpx;
  height: 22rpx;
}

button.option-item {
  font-size: inherit;
  color: inherit;
  font-family: inherit;
  border: none;
  background: #fff;
}
