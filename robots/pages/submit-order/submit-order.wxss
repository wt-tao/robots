/* pages/submit-order/submit-order.wxss */
page{
  background:#f0f0f0;
}
.section{
  background:#fff;
  /* margin-bottom:10rpx; */
  letter-spacing:3rpx;
  margin-top:10rpx;
}
.section-width{
  width:50%;
  padding-top:15rpx;
  padding-bottom:20rpx;
}
.section-left{
  padding-left:10rpx;
}
.order-date{
  /* color:#d0d2d4; */
  height:25rpx;
  line-height:25rpx;
  font-size:9pt;
  padding-left:8rpx;
}
.order-content{
  height:25rpx;
  line-height:25rpx;
  font-size:9pt;
  padding-left:8rpx;
}
.option-list {
  margin-bottom: 20rpx;
}
.option-list>view{
  border-bottom: 1rpx solid #eee;
}

.option-item {
  background: #fff;
  padding: 0 24rpx;
  display: block;
  position: relative;
}

.option-item .option-content {
  /* border-bottom: 1rpx solid #eee; */
  height: 80rpx;
}

.option-item .option-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 24rpx;
}

.option-item .option-jisntou {
  width: 14rpx;
  height: 32rpx;
}

button.option-item {
  font-size: inherit;
  color: inherit;
  font-family: inherit;
  border: none;
  background: #fff;
}
.renew-select{
  font-size:8pt;
  padding:5rpx;
}
.coupon-used{
  width:100%;
  height: 170rpx;
}

/* 底部 */
.navigator{
  width: 100%;
  height:110rpx;
  align-items: center;
  background: #fff;
  position: fixed;
  top:91%;
  left:0;
}
.item{
  width: 33.333%;
  font-size:11pt;
  text-align:center;
  height:110rpx;
  line-height:110rpx;

}
.price{
  color:#d96b6a;
}
.price-unit{
  font-size:6pt;
}
.submit{
  outline: none;
  margin: 0;
  background: transparent;
  font-size: 12pt;
  font-weight: bold;
  height:110rpx;
  line-height:110rpx;

}
.submit::after{
  border:none;
}

/* 支付方式 */
/* 弹出框 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width:440rpx;
  overflow: hidden;
  position: fixed;
  top: 48%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 145rpx;
  border-radius: 30rpx;
  
}

.modal-title {
  padding:15rpx 0 0 15rpx;
  font-size:9pt;
  text-align: left;
}

.modal-content {
  padding:25rpx 15rpx 15rpx 15rpx;
  font-size:12pt;
  font-weight:bold;
  letter-spacing:3rpx;
}
.modal-content-line{
  justify-content:space-between;
  margin-bottom:10rpx;
  /* text-align: center; */
}
.modal-content-title{
  width:90%;
  /* text-align: center; */
}
.modal-footer {
  display: flex;
  align-items: center;
  height: 92rpx;
  line-height: 92rpx;
  padding:15rpx 0 15rpx 15rpx;
  border-top:1px solid #f0f0f0;
  font-size:12pt;
  font-weight:bold;
  letter-spacing:3rpx;
}
.btn-width{
  /* color:#555; */
  /* margin-top:40rpx; */
  background:linear-gradient(to bottom,#82eed7,#14b48e);
  width:35%;
  font-size:13pt;
  font-weight:500;
  height:60rpx;
  line-height: 60rpx;
}
/* 支付图标 */
.pay-img{
  width:22%;
  height:90rpx;
  margin-right:5%;
  
}
