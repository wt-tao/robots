page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: stretch;
  font-size: 14px;
}
 
.box {
  display: block;
  margin: 10px;
}
 
.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}
 
.flex-item {
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width:14.2%;
}
 
.item-content {
  margin:0 5px;
  /* padding: 0 10px; */
  text-align: center;
  font-size:10pt;
  width:80rpx;
  height:80rpx;
  /* line-height: 2rem; */
  color: #0b5c9b;
  font-weight: bold;
}
.new-date{
  width:80rpx;
  font-size:10pt;
}
.lunar-date{
  width:80rpx;
  font-size:9pt;
  color:#c2bdbd;
  font-weight: none;
}

.bk-color-day {
  border:2rpx solid #ffcb45;
  background-color: #fff9df;
}
 
.item-content-current-day {
  flex-grow: 2;
}

/* 周颜色 */
